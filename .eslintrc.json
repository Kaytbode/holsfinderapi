{
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha":true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "dot-notation" : ["error", { "allowKeywords": false }],
        "no-unused-vars": [
            "error",
            {
              "varsIgnorePattern": "should"
            }
          ]
    }
}
